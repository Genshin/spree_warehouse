<fieldset id="restocking">
  <%= form_for :stock_record, :url => admin_restock_path, :html => { :id => "restocking_form" } do |f| %>
    <%= f.label :quantity, t(:qty) %>
    <%= f.number_field :quantity, :min => 0, :class => 'small' %>

    <%= f.label :order_number, t(:order_number) %>
    <%= f.text_field :order_number, :class => 'small' %>
    
    <%= f.label :container_taxon_id, t(:container) %>
    <%= f.select :container_taxon_id, options_from_collection_for_select(@container_taxons, "id", "name", @container_taxon_id) if @container_taxon_id %>

    <%= f.label :supplier_id, t(:supplier) %>
    <%= f.select :supplier_id, options_from_collection_for_select(@suppliers, "id", "name", @supplier_id) if @supplier_id %>
    
    <%= hidden_field :stock_record, :variant_id, :value => @variant.id %>
    <%= hidden_field :stock_record, :direction, :value => "in" %>
    
    <%= button t(:submit) %>
  <% end %>
</fieldset>
