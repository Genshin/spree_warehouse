<fieldset id="restocking">
  <%= form_for :stock_record, :url => admin_destock_path, :html => { :id => "destocking_form" } do |f| %>
    <%= f.label :quantity, t(:qty) %>
    <%= f.number_field :quantity, :min => 0, :class => 'small' %>
    
    <%= f.label :destocking_reason_id, t(:reason) %>
    <%= f.select :destocking_reason_id, options_from_collection_for_select(@reasons, "id", "name") %>
    
    <%= hidden_field :stock_record, :variant_id, :value => @variant.id %>
    <%= hidden_field :stock_record, :direction, :value => "out" %>
    <%= hidden_field :stock_record, :container_taxon_id, :value => @container_taxon_id if @container_taxon_id %>
    
    <%= button t(:submit) %>
  <% end %>
</fieldset>

