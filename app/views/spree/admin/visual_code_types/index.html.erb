<div data-hook="admin_visual_code_types_index">
  <h1><%= t("visual_code.types") %></h1>
</div>

<br />
<table id="visual_code_types" class="index">
  <tr>
    <th>Name</th>
    <th>Handler</th>
  </tr>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_visual_code_type_link">
      <%= button_link_to t("visual_code.new_type"), new_admin_visual_code_type_path, :icon => 'add', :id => 'admin_new_visual_code_type' %>
    </li>
  </ul>
  <br class="clear" />
</div>


<% @visual_code_types.each do |vct| %>
  <tr>
    <td><%= vct.name %></td>
    <td><%= vct.handler %></td>
    <td class="actions">
    </td>
  </tr>
<% end %>
</table>
