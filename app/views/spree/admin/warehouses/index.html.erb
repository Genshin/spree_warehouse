<%= render :partial => 'spree/admin/shared/warehouse_sub_menu' %>

<div data-hook="admin_warehouses_index">
  <h1><%= t(:list_warehouses) %></h1>
</div>

<br />
<table id="warehouses" class="index">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Location</th>
    <th>Details</th>
    <th></th>
  </tr>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_warehouse_link">
      <%= button_link_to t(:new_warehouse), new_admin_warehouse_path, :icon => 'add', :id => 'admin_new_warehouse' %>
    </li>
  </ul>
  <br class="clear" />
</div>


<% @warehouses.each do |wh| %>
  <tr>
    <td><%= wh.name %></td>
    <td><%= wh.code %></td>
    <td><%= wh.location %></td>
    <td><%= wh.details %></td>
    <td class="actions">
      <%= link_to_edit wh %>
      <%= link_to_delete wh %>
    </td>
  </tr>
<% end %>
</table>


