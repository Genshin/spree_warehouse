<h1>Warehouses</h1>
<table id="warehouses" class="index">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Location</th>
    <th>Details</th>
    <th></th>
  </tr>

<% @warehouses.each do |wh| %>
  <tr>
    <td><%= wh.name %></td>
    <td><%= wh.code %></td>
    <td><%= wh.location %></td>
    <td><%= wh.details %></td>
    <td class="actions">
      <%= link_to_with_icon 'edit',"Edit", edit_admin_warehouse_path(wh) %>
      <%= link_to_with_icon 'delete' ,"Delete", admin_warehouse_path(wh), :method => :delete, :confirm => "Are you sure ?" %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= button_link_to t(:new_warehouse), new_admin_warehouse_path, :icon => 'add', :id => 'new_warehouse' %>
