<% if container_taxon.children.length != 0 %>
  <ul>
    <% container_taxon.children.each do |child| %>
      <li id="<%= child.id %>" rel="taxon">
        <a  href="#"><%= child.name %></a>
        <% if child.children.length > 0 %>
          <%= render :partial => 'container_taxon', :locals => { :container_taxon => child } %>
        <% end %>
      </li>
    <% end %>
  </ul>
  
<% else %>
  <i>No taxons</i>
<% end %>