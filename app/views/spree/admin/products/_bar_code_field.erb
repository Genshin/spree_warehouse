<%= f.fields_for :master do |m| %>
  <%= m.fields_for :visual_code_attributes do |vc| %>
    
    <p data-hook="visual_code">
      <%= vc.label :code, t(:data, :scope => :visual_code) %><br />
      <% if !@product.master.visual_code.nil? %>
        <%= vc.text_field :code , :value => @product.master.visual_code.code %>
      <% else %>
        <%= vc.text_field :code %>
      <% end %>
      <%= error_message_on :code, :code %>
    </p>
      
  <% end %>
<% end %>    



  
  

