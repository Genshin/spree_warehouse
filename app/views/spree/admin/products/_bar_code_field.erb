<% unless @product.has_variants? %>
  <p data-hook="visual_code">
    <%= f.fields_for :visual_code do |vc| %>
      <%= unless vc.nil? %>
        Bar Code:  <%= vc.code %> 
        <!-- this hidden field is to hardcode the type to Barcode for now -->
        <%= f.hidden_field :type_id, :name => 'visual_code_type_id', :value => Spree::VisualCodeType.where(:name => "Barcode").first.id %>
      <% end %> 
    <% end %>
  </p>  
<% end%>


  
  

